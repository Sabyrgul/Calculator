<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Grey.Button" parent="Base.Button">
        <item name="backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Orange.Button" parent="Base.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Darkgrey.Button" parent="Base.Button">
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>
<style name="Base.Button.SecondActivity" parent="Widget.MaterialComponents.Button">
    <item name="backgroundTint">@color/white</item>
    <item name="cornerRadius">7dp</item>
    <item name="android:textSize">20sp</item>
    <item name="android:drawableEnd">@drawable/ic_baseline_play</item>
    <item name="android:textColor">@color/grey_second</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:gravity">start</item>
    <item name="paddingStart">15dp</item>
</style>
</resources>